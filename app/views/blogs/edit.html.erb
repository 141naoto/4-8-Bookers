<% if flash[:notice] %>
<div class="flash">
	<%= flash[:notice] %>
</div>
<% end %>

<h2>Editing Book</h2>

<%= form_for(@blog) do |f| %>

<h4>Title</h4>
<%= f.text_field :title, class:"book_title" %>

<h4>Body</h4>
<%= f.text_area :body, class:"book_body" %>
<div class="Update-Book-button">
<%= f.submit 'Update Book' %>
</div>
<% end %>

<%= link_to "Show", blog_path(@blog), class:"show_#{@blog.id}" %>

<%= link_to "Back", blogs_path(@blog), class:"back" %>